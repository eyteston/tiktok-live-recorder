# ─── TikTok Authentication ────────────────────────────────────────────────────
# Your TikTok session ID (required for age-restricted streams)
# Get this from browser DevTools → Application → Cookies → sessionid
TIKTOK_SESSION_ID=

# Or paste your full cookie string (the app will parse it automatically)
# TIKTOK_COOKIES=

# ─── Recording Defaults ──────────────────────────────────────────────────────
OUTPUT_DIR=./recordings
DEFAULT_QUALITY=hd
# Options: ld, sd, hd, uhd, origin

# ─── Rate Limiting ────────────────────────────────────────────────────────────
# Minimum seconds between TikTok API calls (per user)
RATE_LIMIT_DELAY=10

# ─── Notifications (optional) ────────────────────────────────────────────────

# Discord webhook URL for go-live notifications
DISCORD_WEBHOOK_URL=

# Telegram bot token + chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email notifications (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFY_EMAIL=

# ─── FFmpeg ───────────────────────────────────────────────────────────────────
# Custom path to FFmpeg binary (leave empty to use system PATH)
FFMPEG_PATH=
